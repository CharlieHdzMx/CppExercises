bool isVowel(const char& c){
    if((c=='a') || (c=='A') || (c=='e') || (c=='E') || (c=='i') || (c=='I') ||
            (c=='o') || (c=='O') || (c=='u') || (c=='U'))
        return true;
    return false;
}

void vowelCount(unsigned& iCnt, unsigned& twochCnt, unsigned& aCnt, unsigned& eCnt,
                unsigned& oCnt, unsigned& blankCnt, char& ch, char& preF, unsigned& uCnt)
{
    while (cin >> ch)
        switch (ch)
        {
            case ' ':
            case '\n':
            case '\t':
                ++blankCnt;
                break;
            case 'a':
            case 'A':
                ++aCnt;
                break;
            case 'e':
            case 'E':
                ++eCnt;
                break;
            case 'i':
                if(preF=='f') ++twochCnt,preF='\0';
            case 'I':
                ++iCnt;
                break;
            case 'o':
            case 'O':
                ++oCnt;
                break;
            case 'u':
            case 'U':
                ++uCnt;
                break;
        case 'f':
            if(preF=='f') ++twochCnt,preF='\0';
            else preF='f';
            break;
        case 'l':
            if(preF=='f') ++twochCnt,preF='\0';
            break;
        case 'q':
        default:
            return;
        }
}

