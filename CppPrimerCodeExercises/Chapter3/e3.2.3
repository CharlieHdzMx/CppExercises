#include <iostream>
#include <ctype.h>

using namespace std;

enum class TypeOfLoop {FOR,FORRANGE,WHILE};

void iterateToChangeForRange(string& test)
{
    for(char& c: test){
        c='X';
    }
}



void iterateToChangeFor(string& test)
{
    for(unsigned int i=0; i<test.size();++i){
        auto& c=test.at(i);
        c='X';
    }
}

void iterateToChangeWhile(string& test)
{
    unsigned int i=0;
    while(i<test.size()){
        auto& c=test.at(i);
        c='X';
        ++i;
    }
}

void changeCharacterToX(TypeOfLoop typeofLoop)
{
    string test="This is a test to change thje characters to x using a for loop";

    cout<<test<<endl;

    if(typeofLoop==TypeOfLoop::FORRANGE)
        iterateToChangeForRange(test);
    else if(typeofLoop==TypeOfLoop::WHILE)
        iterateToChangeWhile(test);
    else if(typeofLoop==TypeOfLoop::FOR)
        iterateToChangeFor(test);

    cout<<test<<endl;
}


